<Window x:Class="FreelanceManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Freelance Manager" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="Add Client" FontWeight="Bold"/>
            <TextBox x:Name="ClientNameTextBox" Text="Client Name" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="ClientEmailTextBox" Text="Client Email" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Content="Add Client" Click="AddClient_Click" Margin="0,5"/>

            <Separator Margin="0,10"/>

            <TextBlock Text="Add Project" FontWeight="Bold"/>
            <ComboBox x:Name="ClientComboBox" DisplayMemberPath="Name"/>
            <TextBox x:Name="ProjectNameTextBox" Text="Project Name" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="ProjectAmountTextBox" Text="Total Amount" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Content="Add Project" Click="AddProject_Click" Margin="0,5"/>
          
            <Separator Margin="0,10"/>

            <TextBlock Text="Add Invoice" FontWeight="Bold"/>
            <ComboBox x:Name="ProjectComboBox" DisplayMemberPath="Name"/>
            <TextBox x:Name="InvoiceAmountTextBox" Text="Invoice Amount" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <CheckBox x:Name="InvoicePaidCheckBox" Content="Paid"/>
            <Button Content="Add Invoice" Click="AddInvoice_Click" Margin="0,5"/>
            <Separator Margin="0,10"/>
            <Button Content="Clear All Data" Click="ClearAllData_Click" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Client Report" FontWeight="Bold" FontSize="16"/>
            <ComboBox x:Name="ReportClientComboBox" DisplayMemberPath="Name" SelectionChanged="ReportClientComboBox_SelectionChanged"/>
            <ListBox x:Name="ReportListBox" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>

